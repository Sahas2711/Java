
#include <iostream>
#include <cstdlib>
#include <ctime>

class Game {
private:
    int random;
public:
    Game(int n) {
        random = n;
    }

    void guessNumber(int a) {
        int count = 0;
        do {
            if (a == random) {
                std::cout << "Congratulations! You guessed it right." << std::endl;
            } else if (a > random) {
                std::cout << "Please Think about a smaller number and enter: ";
                std::cin >> a;
            } else {
                std::cout << "Please Enter a bigger number: ";
                std::cin >> a;
            }
            count++;
        } while (a != random);

        std::cout << "You guessed the number in " << count << " attempts." << std::endl;
    }
};

int main() {
    srand(time(0));

    int randomNumber = rand() % 100 + 1; // Generates a random number between 1 and 100
    Game game(randomNumber);

    std::cout << "Welcome to Guess the Number Game!" << std::endl;
    std::cout << "Enter any number between 1 to 100: ";

    int userGuess;
    std::cin >> userGuess;
    game.guessNumber(userGuess);

    return 0;
}
